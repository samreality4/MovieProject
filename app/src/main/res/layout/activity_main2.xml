<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hxh.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:backgroundTint="@color/Lightblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ViewFlipper
            android:id="@+id/Pictures"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="287dp"></ImageView>


        </ViewFlipper>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Age"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Age"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/AgeValue"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:inputType="number"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Height"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/heightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/location"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Location"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/locationValue"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:inputType="text"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/education"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Education"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/eduValue"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/interest1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Interest"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/interest1Value"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/interest2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Interest"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/interest2Value"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/interest3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="Interest"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/interest3Value"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dip"
                    android:textColor="#000000" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar"/>
</LinearLayout>
