<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/BLUE"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/candidate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/catpawselector"
            android:visibility="visible"
            android:onClick="goToMain" />


        <ImageButton
            android:id="@+id/chat"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/talkselector"
            android:onClick="goToChatroom" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/catprofileselector"
            android:layout_weight="1"
            android:onClick="goToProfile" />

        <ImageButton
            android:id="@+id/library"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/libraryselector"
            android:onClick="goToLibrary" />

        <ImageButton
            android:id="@+id/poll"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/pollselector"
            android:layout_weight="1"
            android:onClick="goToPoll" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>